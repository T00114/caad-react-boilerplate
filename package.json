{
  "name": "caad-react-boilerplate",
  "version": "1.0.0",
  "scripts": {
    "test": "npm-run-all -p eslint stylelint nsp ava",
    "ava": "ava",
    "nsp": "nsp check",
    "eslint": "eslint ./src ./routes ./views ./app.js",
    "eslint:fix": "eslint --fix .",
    "stylelint": "stylelint 'src/**/*.css'",
    "prettier": "find ./webpack.* ./src -name '*.js' -o -name './sources/*.json' | xargs prettier-eslint --write",
    "start": "npm run start:dev",
    "start:dev": "NODE_ENV=dev webpack-dev-server --progress --colors",
    "start:staging": "NODE_ENV=staging webpack-dev-server --progress --colors",
    "start:production": "NODE_ENV=production webpack-dev-server --host 0.0.0.0 --port 8080 --progress --colors",
    "start:docker": "pm2-docker ./build/app.js --watch",
    "build": "NODE_ENV=production webpack -p",
    "build:staging": "NODE_ENV=staging webpack -p"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Cyberagent/caad-react-boilerplate"
  },
  "ava": {
    "require": [
      "babel-register",
      "babel-polyfill"
    ],
    "babel": "inherit"
  },
  "license": "UNLICENSED",
  "devDependencies": {
    "ava": "0.25.0",
    "babel-cli": "6.26.0",
    "babel-core": "6.26.3",
    "babel-eslint": "8.2.6",
    "babel-loader": "7.1.5",
    "babel-preset-env": "1.7.0",
    "babel-preset-react": "6.24.1",
    "copy-webpack-plugin": "4.5.2",
    "css-loader": "1.0.0",
    "eslint": "4.19.1",
    "eslint-config-airbnb": "17.0.0",
    "eslint-loader": "2.1.0",
    "eslint-plugin-import": "2.13.0",
    "eslint-plugin-jsx-a11y": "6.1.1",
    "eslint-plugin-react": "7.10.0",
    "file-loader": "1.1.11",
    "html-webpack-plugin": "3.2.0",
    "json-loader": "0.5.7",
    "npm-run-all": "^4.1.1",
    "nsp": "3.2.1",
    "pm2": "^2.10.0",
    "style-loader": "0.21.0",
    "stylelint": "9.3.0",
    "stylelint-config-standard": "18.2.0",
    "stylelint-order": "0.8.1",
    "url-loader": "1.0.1",
    "webpack": "4.16.2",
    "webpack-cli": "3.1.0",
    "webpack-dev-server": "3.1.5",
    "webpack-manifest-plugin": "2.0.3",
    "webpack-merge": "4.1.3"
  },
  "dependencies": {
    "axios": "0.18.0",
    "jwt-simple": "0.5.1",
    "material-ui": "0.20.1",
    "moment": "^2.22.0",
    "react": "16.4.1",
    "react-dom": "16.4.1",
    "react-router-dom": "4.3.1",
    "react-transition-group": "2.4.0"
  }
}
